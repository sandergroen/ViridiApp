@page "/projects/create"
@inject IProjectService ProjectService
@inject NavigationManager NavigationManager

<PageTitle>New Project</PageTitle>

<div class="card bg-light">
    <div class="card-body">
        <form>
            <div class="form-group">
                <label for="Title" class="control-label">Title</label>
                <input form="Title" class="form-control" @bind="@project.Title" />
            </div>

            <div class="form-group">
                <label for="Description" class="control-label">Description</label>
                <textarea form="Title" class="form-control" @bind="@project.Description"></textarea>
            </div>
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateProject" value="Save"/>
                <input type="button" class="btn btn-default" @onclick="@Cancel" value="Cancel"/>
            </div>
        </form>
    </div>
</div>

@code {
    Project project = new Project();
    protected async void CreateProject()
    {
        await ProjectService.AddProject(project);
        NavigationManager.NavigateTo("projects");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("projects");
    }
}
